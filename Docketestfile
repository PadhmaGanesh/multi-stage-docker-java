FROM eclipse-temurin:25-jre-jammy AS build
RUN git clone https://github.com/PadhmaGanesh/spring-petclinic.git && \
    cd spring-petclinic && \
    mvn package

FROM eclipse-temurin:25-jre AS running
ARG user_name=ganesh
ARG DIR=/usr/share/demo
RUN adduser -m -d ${DIR} -s /bin/bash ${user_name} 
WORKDIR ${DIR}
USER ${user_name}
COPY --from=build /spring-petclinic/target/*.jar ganesh.jar
EXPOSE 8080
CMD ["java","-jar","ganesh.jar"]
